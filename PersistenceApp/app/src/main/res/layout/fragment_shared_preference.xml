<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_sp_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_below="@id/fragment_sp_label"
        android:id="@+id/fragment_sp_input"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="40dp"
        android:hint="@string/fragment_sp_input_hint"/>

    <LinearLayout
        android:layout_below="@id/fragment_sp_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_sp_button_save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="50"
            android:text="@string/fragment_sp_button_save"/>

        <Button
            android:id="@+id/fragment_sp_button_load"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="50"
            android:text="@string/fragment_sp_button_load"/>

    </LinearLayout>

</RelativeLayout>